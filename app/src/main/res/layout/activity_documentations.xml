<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/docback"
    android:orientation="horizontal"
    tools:context=".Documentations">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Documentation Apps\n Menu"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="101dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="190dp"
        android:id="@+id/calculator"
        android:background="@drawable/calc"
        android:paddingBottom="20dp" />

    <TextView
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="300dp"
        android:layout_marginStart="11dp"
        android:text="Calculator"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="19dp" />

    <Button
        android:id="@+id/calen"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="158dp"
        android:layout_marginStart="38dp"
        android:background="@drawable/calen"
        android:paddingTop="20dp" />

    <TextView
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="300dp"
        android:layout_marginEnd="22dp"
        android:text="Stop Watch"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="19dp" />


    <Button
        android:id="@+id/stopwatch"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="31dp"
        android:layout_marginTop="188dp"
        android:background="@drawable/stwach"
        android:paddingBottom="20dp" />

    <TextView
        android:layout_width="88dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="130dp"
        android:layout_marginStart="52dp"
        android:text="Calendar"
        android:textColor="@color/active_dots"
        android:textSize="19dp" />

    <Button
        android:id="@+id/notepad"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="158dp"
        android:layout_marginEnd="41dp"
        android:background="@drawable/notp"
        android:paddingTop="20dp" />

    <TextView
        android:layout_width="112dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="130dp"
        android:layout_marginEnd="11dp"
        android:text="Notepad"
        android:textColor="@color/active_dots"
        android:textSize="19dp" />


</RelativeLayout>