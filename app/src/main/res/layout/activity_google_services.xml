<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gogleback"
    android:orientation="horizontal"
    tools:context=".GoogleServices">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Google Service Apps\n Menu"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="101dp" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/cord"
        android:id="@+id/cordinator"
        android:paddingBottom="20dp" />

    <TextView
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="285dp"
        android:layout_marginStart="28dp"
        android:text="Coordinator\nDetector"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="19dp" />

    <Button
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="238dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/weather"
        android:id="@+id/weather"
        android:paddingBottom="20dp" />
    <TextView
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="290dp"
        android:layout_marginStart="228dp"
        android:text="Weather"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="19dp" />
    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/gogs"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="152dp"
        android:layout_marginStart="38dp"
        android:background="@drawable/g"
        android:paddingTop="20dp" />

    <TextView
        android:layout_width="130dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="123dp"
        android:layout_marginStart="15dp"
        android:text="Google"
        android:textAlignment="center"
        android:textColor="@color/active_dots"
        android:textSize="19dp" />


</RelativeLayout>