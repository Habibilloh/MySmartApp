<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.user.mysmartapp.MainActivity"
    android:background="@drawable/forsmatappback">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="normal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:text="APP \nCATEGORIES"
        android:textColor="@android:color/white"
        android:textSize="35sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="39dp"
        android:orientation="vertical"
        android:paddingTop="90dp">


        <br.com.bloder.magic.view.MagicButton
            android:id="@+id/documentation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="85dp"
            app:button_icon="@drawable/d"
            app:button_icon_height="35dp"
            app:button_icon_width="35dp"
            app:expandable_area_color="#200cb7"
            app:hide_text="Documentation"
            app:hide_text_color="@android:color/white"
            app:hide_text_size="8sp"
            app:icon_button_color="#200cb7"
            app:magic_button_size="60dp" />

        <br.com.bloder.magic.view.MagicButton
            android:id="@+id/multimedia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            app:button_icon="@drawable/m"
            app:button_icon_height="35dp"
            app:button_icon_width="35dp"
            app:expandable_area_color="#ff4551"
            app:hide_text="Multimedia"
            app:hide_text_color="@android:color/white"
            app:hide_text_size="8sp"
            app:icon_button_color="#d93a41"
            app:magic_button_size="60dp" />

        <br.com.bloder.magic.view.MagicButton
            android:id="@+id/gservices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            app:button_icon="@drawable/g"
            app:button_icon_height="35dp"
            app:button_icon_width="35dp"
            app:expandable_area_color="#f5f3ff"
            app:hide_text="Google\nServices"
            app:hide_text_color="#58585b"
            app:hide_text_size="7sp"
            app:icon_button_color="#f8faff"
            app:magic_button_size="60dp" />

        <br.com.bloder.magic.view.MagicButton
            android:id="@+id/games"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:button_icon="@drawable/game"
            app:button_icon_height="35dp"
            app:button_icon_width="35dp"
            app:expandable_area_color="#7bb4ff"
            app:hide_text="Games"
            app:hide_text_color="#58585b"
            app:hide_text_size="7sp"
            app:icon_button_color="#005bd2"
            app:magic_button_size="60dp" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:onClick="loadSlides"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@null"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/white"/>
</RelativeLayout>
